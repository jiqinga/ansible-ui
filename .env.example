# Ansible Web UI 环境配置示例文件
# 复制此文件为 .env 并根据您的环境修改配置

# 基础设置
DEBUG=true
HOST=127.0.0.1
PORT=8000
ALLOWED_HOSTS=["*"]

# 安全设置 - 生产环境必须更改
SECRET_KEY=your-very-secure-secret-key-change-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# 数据库设置
# 开发环境使用SQLite
DATABASE_URL=sqlite+aiosqlite:///./data/ansible_web_ui.db
# 生产环境使用PostgreSQL
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/ansible_web_ui
DATABASE_ECHO=false

# Redis设置
REDIS_URL=redis://localhost:6379/0

# Celery设置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Ansible设置
# ANSIBLE_PLAYBOOK_DIR: Playbook文件目录（用于Ansible执行和临时文件存储，不再用于缓存）
ANSIBLE_PLAYBOOK_DIR=./playbooks
ANSIBLE_INVENTORY_DIR=./inventory
ANSIBLE_LOG_DIR=./logs
ANSIBLE_CONFIG_FILE=./config/ansible.cfg
ANSIBLE_TIMEOUT=3600

# 文件上传设置
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# 日志设置
LOG_LEVEL=INFO
# LOG_FILE=./logs/ansible_web_ui.log
# 禁用彩色日志输出（如果终端不支持ANSI颜色）
# LOG_NO_COLOR=true

# 前端设置
FRONTEND_URL=http://localhost:3000
STATIC_DIR=./static