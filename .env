# Ansible Web UI 开发环境配置

# 基础设置
DEBUG=true
HOST=127.0.0.1
PORT=8000

# 安全设置
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 数据库设置
DATABASE_URL=sqlite+aiosqlite:///./data/ansible_web_ui.db
DATABASE_ECHO=false

# Redis设置
REDIS_URL=redis://172.29.16.11:6379/0

# Celery设置
CELERY_BROKER_URL=redis://172.29.16.11:6379/1
CELERY_RESULT_BACKEND=redis://172.29.16.11:6379/2

# Ansible设置
ANSIBLE_PLAYBOOK_DIR=./playbooks
ANSIBLE_INVENTORY_DIR=./inventory
ANSIBLE_LOG_DIR=./logs
ANSIBLE_CONFIG_FILE=./config/ansible.cfg

# 日志设置
# 可选值: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 禁用彩色日志输出（如果终端显示ANSI转义码）
# LOG_NO_COLOR=true

# CORS设置
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8000","http://127.0.0.1:8000"]